@using prjITicket.Models;
@using PagedList;
@using PagedList.Mvc;
@model IEnumerable<prjITicket.Models.ShortMessage>
<link href="~/Content/PagedList.css" rel="stylesheet" />

@if (Model.Count() == 0)
{<div class="row">
        <div style="margin:0px auto">
            <h3><strong>目前暫無訊息</strong></h3>
        </div>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                iTicket後台訊息
            </th>
            <th>
                訊息內容
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    系統管理員
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageContent)
                </td>
                <td></td>
            </tr>
        }

    </table>
}
